{
  "family": "sherlock-worker",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "worker",
      "image": "ACCOUNT_ID.dkr.ecr.REGION.amazonaws.com/sherlock-service/worker:latest",
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "AI_PROVIDER",
          "value": "claude"
        },
        {
          "name": "REPOS_PATH",
          "value": "/tmp/repos"
        },
        {
          "name": "MAX_REPO_AGE_HOURS",
          "value": "24"
        },
        {
          "name": "MAX_CONCURRENT_REVIEWS",
          "value": "5"
        },
        {
          "name": "REVIEW_TIMEOUT_MS",
          "value": "300000"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:sherlock/database-url"
        },
        {
          "name": "REDIS_URL",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:sherlock/redis-url"
        },
        {
          "name": "CLAUDE_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:sherlock/api-keys:CLAUDE_API_KEY::"
        },
        {
          "name": "OPENAI_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:sherlock/api-keys:OPENAI_API_KEY::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/sherlock-worker",
          "awslogs-region": "REGION",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "essential": true
    }
  ]
}
