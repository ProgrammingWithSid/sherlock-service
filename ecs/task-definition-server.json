{
  "family": "sherlock-server",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "server",
      "image": "ACCOUNT_ID.dkr.ecr.REGION.amazonaws.com/sherlock-service/server:latest",
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "PORT",
          "value": "3000"
        },
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "GITHUB_APP_ID",
          "value": "YOUR_GITHUB_APP_ID"
        },
        {
          "name": "GITHUB_CLIENT_ID",
          "value": "YOUR_GITHUB_CLIENT_ID"
        },
        {
          "name": "GITHUB_CLIENT_SECRET",
          "value": "YOUR_GITHUB_CLIENT_SECRET"
        },
        {
          "name": "BASE_URL",
          "value": "https://your-domain.com"
        },
        {
          "name": "AI_PROVIDER",
          "value": "claude"
        },
        {
          "name": "REPOS_PATH",
          "value": "/tmp/repos"
        },
        {
          "name": "MAX_REPO_AGE_HOURS",
          "value": "24"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:sherlock/database-url"
        },
        {
          "name": "REDIS_URL",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:sherlock/redis-url"
        },
        {
          "name": "GITHUB_PRIVATE_KEY_PATH",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:sherlock/github-private-key"
        },
        {
          "name": "CLAUDE_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:sherlock/api-keys:CLAUDE_API_KEY::"
        },
        {
          "name": "OPENAI_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:sherlock/api-keys:OPENAI_API_KEY::"
        },
        {
          "name": "GITHUB_WEBHOOK_SECRET",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:sherlock/api-keys:GITHUB_WEBHOOK_SECRET::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/sherlock-server",
          "awslogs-region": "REGION",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "wget --no-verbose --tries=1 --spider http://localhost:3000/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "essential": true
    }
  ]
}

